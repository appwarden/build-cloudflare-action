{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src"]
}
