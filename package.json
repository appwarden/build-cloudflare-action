{
  "name": "@appwarden/build-cloudflare-action",
  "version": "1.2.5",
  "description": "Easy-to-use GitHub Action to build Appwarden for deployment to your Cloudflare domain",
  "author": "support@appwarden.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appwarden/build-cloudflare-action/issues"
  },
  "homepage": "https://github.com/appwarden/build-cloudflare-action#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appwarden/build-cloudflare-action.git"
  },
  "keywords": [
    "appwarden",
    "github actions",
    "web3",
    "web security"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "action.yml"
  ],
  "scripts": {
    "build": "npm run build:action",
    "build:action": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check:types": "tsc --noEmit",
    "check:prettier": "prettier --check .",
    "check:ci": "npm run check:types && npm run check:prettier"
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "parse-domain": "^8.2.2",
    "yaml": "2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@cloudflare/workers-types": "^4.20260210.0",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "lefthook": "^2.0.16",
    "prettier": "^3.8.1",
    "semver": "^7.7.3",
    "tsup": "8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
